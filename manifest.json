{
    "name": "Flash",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Loads your favorite tabs all in a flash!",
    "permissions": ["storage"],
    "browser_action": {
        "default_icon": "icons8-lightning-bolt-64.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
  }