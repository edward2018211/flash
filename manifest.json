{
    "name": "Pockets",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Organize your tabs in a flash!",
    "options_page": "optionsPage/options.html",
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "assets/logo_transparent.png"
    },
    "background": {
        "persistent": false,
        "page": "src/background.html"
    }
}
